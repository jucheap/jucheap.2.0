
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta name="description" content="JuCheap"/>
    <meta name="keywords" content="JuCheap admin dashboard, admin, flat, flat ui, ui kit, app, web app, responsive"/>
    <link rel="shortcut icon" href="/Images/ico/favicon.ico"/>
    <title>Login - JuCheap</title>

    <!--common style-->
    @Styles.Render("~/Template/Admin/jucheap/Css/BaseStyles")
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->

    @Html.Partial("BaiduTongji")
</head>

<body class="login-body">

    <div class="login-logo">
        JuCheap
    </div>

    <h2 class="form-heading">登录</h2>
    <div class="container log-row">
        <form id="loginForm" class="form-signin" action="@Url.Action("Login", "User")" method="POST">
            <div class="login-wrap">
                @{
                    if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                            @string.Format("登录失败：{0}", ViewData.ModelState["Error"].Errors[0].ErrorMessage)
                        </div>
                    }
                }
                <input type="text" id="LoginName" name="LoginName" class="form-control" placeholder="账号" value="admin" required autofocus/>
                <input type="password" id="Password" name="Password" class="form-control" placeholder="密码" value="qwaszx" required/>


                <button class="btn btn-lg btn-success btn-block" type="submit">登录</button>
                <label class="checkbox-custom check-success">
                    <input type="checkbox" value="remember-me" id="checkbox1"> <label for="checkbox1">记住我</label>
                    <a class="pull-right" data-toggle="modal" href="@Url.Action("Index", "User")#forgotPass"> 忘记密码?</a>
                </label>

                <div class="registration">
                    没有账号?
                    <a class="" href="#">
                        创建账号
                    </a>
                </div>

            </div>
        </form>

        <!-- Modal -->
        <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="forgotPass" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">忘记密码 ?</h4>
                    </div>
                    <div class="modal-body">
                        <p>输入您的注册账号.</p>
                        <input type="text" name="txtLoginName" placeholder="账号" autocomplete="off" class="form-control placeholder-no-fix" />
                        <p>输入您的注册邮箱，激活账号.</p>
                        <input type="text" name="email" placeholder="邮箱" autocomplete="off" class="form-control placeholder-no-fix" />

                    </div>
                    <div class="modal-footer">
                        <button data-dismiss="modal" class="btn btn-default" type="button">取消</button>
                        <button class="btn btn-success" type="button">提交</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- modal -->
    </div>


    @Scripts.Render("~/JS/Admin/jucheap/Login")
</body>
</html>

